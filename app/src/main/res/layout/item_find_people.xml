<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp">


    <RelativeLayout
        android:id="@+id/item_find_people_cart_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <ImageView
            android:id="@+id/item_find_people_img_find_people"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            android:layout_marginTop="@dimen/_10sdp"/>



        <TextView
            android:id="@+id/item_find_people_tv_find_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="hhbhjbjhbnj"
            android:textSize="@dimen/_16sdp"
            android:layout_below="@+id/item_find_people_img_find_people"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:layout_below="@+id/item_find_people_tv_find_people">

            <Button
                android:id="@+id/item_find_people_btn_accept_friend_request"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Accept Friend Request"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/colorPrimary"
                android:layout_height="@dimen/_35sdp"
                android:visibility="gone"/>



            <Button
                android:id="@+id/item_find_people_btn_cancel_friend_request"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_5sdp"
                android:background="@android:color/holo_blue_light"
                android:layout_height="@dimen/_35sdp"
                android:text="Cancel Friend Request"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"
                android:textColor="@android:color/white"
                android:visibility="gone"/>





        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>