<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <ImageView
        android:id="@+id/background_profile_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_360sdp"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/name_profil"
        android:layout_below="@+id/background_profile_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_20sdp"
        android:textAllCaps="false"
        android:gravity="center"
        android:textStyle="bold" />


    <Button
        android:id="@+id/add_friends_request"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/name_profil"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:text="Add Friend"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/_15sdp"/>



    <Button
        android:id="@+id/decline_friends_request"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/add_friends_request"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:text="Cancel Friend Request"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"/>


    </RelativeLayout>

</ScrollView>